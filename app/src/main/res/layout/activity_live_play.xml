<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.chenyuelun.mybili.view.activity.LivePlayActivity">

    <FrameLayout
        android:id="@+id/fl_video"
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <SurfaceView
            android:id="@+id/videoview"
            android:layout_width="match_parent"
            android:layout_height="240dp" />

        <ImageView
            android:id="@+id/iv_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/live_video_loading" />


        <RelativeLayout

            android:id="@+id/rl_controler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradualbg"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <ImageView
                android:padding="10dp"
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

            <TextView
                android:id="@+id/tv_livername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/iv_back"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv_back"
                android:text="我的直播间"
                android:textColor="#fff"
                android:textSize="16sp" />


            <ImageView
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:id="@+id/iv_more"
                android:background="@drawable/ic_action_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:padding="10dp"
                android:id="@+id/iv_play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bili_player_play_can_pause" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_play_pause"
                android:text="47:27"
                android:textColor="#fff"
                android:textSize="15sp" />


            <ImageView
                android:padding="10dp"
                android:id="@+id/iv_full_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_portrait_fullscreen" />

        </RelativeLayout>


    </FrameLayout>


</RelativeLayout>
